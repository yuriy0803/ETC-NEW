{{outlet 'error' }}
<div class="jumbotron-brand">
  <div class="container">
    <div class="row">
      <div class="col-md-4 stats">
        <div style="display: block;">
          <i class="fa fa-cloud"></i> {{t "account.immature.balance"}}: <span>{{format-balance model.stats.immature}} {{config.Unit}}</span><br>
          <small>{{t "account.immature.description"}}</small>
        </div>
        <div style="display: block;">
          <i class="fa fa-bank"></i> {{t "account.pending.balance"}}: <span>{{format-balance model.stats.balance}} {{config.Unit}}</span><br>
          <small>{{t "account.pending.description"}}</small>
        </div>
        {{#if model.stats.pending}}
        <div style="display: block;">
          <i class="fa fa-clock-o"></i> {{t "account.current"}}: <span>{{format-balance model.stats.pending}} {{config.Unit}}</span><br>
        </div>
        {{/if}}
        <div style="display: block;"><i class="fa fa-money"></i> {{t "account.total.paid"}}: <span>{{format-balance model.stats.paid}}</span></div>
        <div style="display: block;"><i class="fa fa-money"></i> {{t "account.last_24h_reward"}}: <span>{{format-balance model.24hreward}}</span></div>
      </div>
      <div class="col-md-4 stats">
              <div style="display: block;">
          <i class="fa fa-clock-o"></i>
          {{t "account.epoch_switch"}}: <span>{{format-relative applicationController.nextEpoch units="hour"}}</span>
        </div>
      
        <div style="display: block;"><i class="fa fa-gears"></i> {{t "account.epoch"}}: <span>{{format-number epoch}}</span></div>
        <div style="display: block;"><i class="fa fa-gears"></i> {{t "account.dag_size"}}: <span>{{format-number dag}} GB</span></div>
        <div style="display: block;"><i class="fa fa-tachometer"></i> {{t "account.hashrate"}}: <span>{{format-hashrate model.currentHashrate}}</span></div>
        <div style="display: block;"><i class="fa fa-tachometer"></i> {{t "account.average_aashrate"}}: <span>{{format-hashrate model.hashrate}}</span></div>
        
      </div>
      <div class="col-md-4 stats">
        <div style="display: block;"><i class="fa fa-tachometer"></i> {{t "account.blocks.found"}}: <span>{{format-number model.stats.blocksFound fallback='0'}}</span></div>
        <div style="display: block;"><i class="fa fa-paper-plane-o"></i> {{t "account.total.payments"}}: <span>{{format-number model.paymentsTotal}}</span></div>
        <div style="display: block;">
          <i class="fa fa-percent"></i> {{t "account.your_personal_luck"}}: <span>{{format-number roundPercent style='percent' maximumFractionDigits='2'}}</span><br/>
          <small> ({{t "account.shares"}}: {{format-hashrate model.stats.roundShares}}) / ({{t "home.difficulty"}}: {{format-hashrate applicationController.difficulty}})</small>
        </div>
        <div style="display: block;"><i class="fa fa-calculator"></i> {{t "account.earnings.miner"}}: <span>{{format-number earnPerDay}} {{config.Unit}}</span></div>
        {{#if model.stats.lastShare}}
        <div style="display: block;"><i class="fa fa-hourglass-half"></i>
          {{t "account.found_a_share_of_difficulty"}}: <span>{{format-hashrate model.stats.lastShareDiff}}</span> 
        </div>
        {{/if}}
        
      </div>
    </div>
  </div>
</div>

<div class="container">
  <ul class="nav nav-tabs">
    {{#active-li currentWhen='account.index' role='presentation'}}
      {{#link-to 'account.index'}}<i class="fas fa-user-hard-hat"></i>  {{t "account.workers"}} <span class="label label-success">{{model.workersOnline}}</span> / <span class="label label-danger">{{model.workersOffline}}</span>{{/link-to}}
    {{/active-li}}
    {{#active-li currentWhen='account.rewards' role='presentation'}}
      {{#link-to 'account.rewards'}}<i class="fas fa-calculator"></i> {{t "account.rewards"}}{{/link-to}}
    {{/active-li}}
    {{#active-li currentWhen='account.payouts' role='presentation'}}
      {{#link-to 'account.payouts'}}<i class="fas fa-paper-plane"></i> {{t "account.payouts"}}{{/link-to}}
    {{/active-li}}
    {{#active-li currentWhen='account.minerschat' role='presentation'}}
      {{#link-to 'account.minerschat'}}<i class="fas fa-comments"></i> {{t "account.live_chat"}}{{/link-to}}
    {{/active-li}}
        {{#active-li currentWhen='account.swap' role='presentation'}}
      {{#link-to 'account.swap'}}<i class="fa fa-money"></i> {{t "account.simpleswap"}}{{/link-to}}
    {{/active-li}}
  </ul>
</div>

{{outlet}}
